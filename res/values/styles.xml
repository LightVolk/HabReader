<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="HabReader.Theme.Light" parent="Theme.Sherlock.Light">
        <item name="actionBarTabTextStyle">@style/Widget.HabReader.ActionBar.TabText</item>
        <item name="android:actionBarTabTextStyle">@style/Widget.HabReader.ActionBar.TabText</item>
        <item name="actionBarTabBarStyle">@style/Widget.HabReader.ActionBar.TabBar</item>
        <item name="android:actionBarTabBarStyle">@style/Widget.HabReader.ActionBar.TabBar</item>
    </style>

    <style name="DataFields">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/text_info_background</item>
    </style>

    <style name="HabReader.Theme.Light.InfoContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/text_info_background</item>
    </style>

    <style name="HabReader.Theme.Light.Users.Divider" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/users_divider</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.HabReader.ActionBar.TabBar" parent="Widget.Sherlock.ActionBar.TabBar">
        <item name="android:dividerPadding">7dip</item>
    </style>

    <style name="Widget.HabReader.ActionBar.TabText" parent="Widget.Sherlock.ActionBar.TabText">
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>