<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	
    <ListView
        android:id="@+id/comments_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/divider" />
    
    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/comment_form"
        android:background="@color/comment_send_divider" />
    <RelativeLayout
        android:id="@+id/comment_form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingLeft="@dimen/comment_send_form_left_padding"
        android:paddingTop="@dimen/comment_send_form_top_padding"
        android:paddingRight="@dimen/comment_send_form_bottom_padding"
        android:paddingBottom="@dimen/comment_send_form_bottom_padding" >

        <ImageButton
            android:id="@+id/send_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/comment_send_background"
            android:src="@drawable/ic_send" />

        <EditText
            android:id="@+id/comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/send_comment"
            android:hint="@string/qa_comments_hint"
            android:singleLine="true" />
    </RelativeLayout>

</RelativeLayout>