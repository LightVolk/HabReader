<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/posts_list_row_background_normal"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/qa_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/title_in_list" />

        <TextView
            android:id="@+id/qa_hubs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/list_hubs"
            android:textSize="@dimen/text_size_small" />

        <RelativeLayout
            android:id="@+id/qa_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal" >

            <TextView
                android:id="@+id/qa_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawablePadding="3dp"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/qa_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/date"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/qa_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/qa_date"
                android:drawablePadding="3dp"
                android:gravity="right"
                android:textColor="@color/list_author_name"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>