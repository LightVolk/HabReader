<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.meiolania.apps.habrahabr"
    android:installLocation="auto"
    android:versionCode="16092013"
    android:versionName="2.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_navigation_drawer"
        android:label="@string/app_name"
        android:theme="@style/HabReader.Theme.Light" >

        <!-- The main entry point of application -->
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Preferences -->
        <activity
            android:name=".activities.PreferencesActivity"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

        <!-- Posts -->
        <activity
            android:name=".activities.PostsShowActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="habrahabr.ru"
                    android:pathPrefix="/post"
                    android:scheme="http" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.PostsSearchActivity" />

        <!-- Hubs -->
        <activity
            android:name=".activities.HubsShowActivity"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity android:name=".activities.HubsSearchActivity" />

        <!-- Q&A -->
        <activity
            android:name=".activities.QaShowActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
            
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="habrahabr.ru"
                    android:pathPrefix="/qa"
                    android:scheme="http" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.QaSearchActivity" />

        <!-- Events -->
        <activity
            android:name=".activities.EventsShowActivity"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="habrahabr.ru"
                    android:pathPrefix="/events/"
                    android:scheme="http" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Companies -->
        <activity
            android:name=".activities.CompaniesShowActivity"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="habrahabr.ru"
                    android:pathPrefix="/company"
                    android:scheme="http" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Users -->
        <activity
            android:name=".activities.UsersShowActivity"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="habrahabr.ru"
                    android:pathPrefix="/users/"
                    android:scheme="http" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.UsersSearchActivity" />
    </application>

</manifest>